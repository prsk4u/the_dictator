<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#200288D1"
    android:orientation="vertical"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="500dp"
            android:text="The Dictator"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.709" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2">

            <EditText
                android:id="@+id/filename_gen"
                android:layout_width="100pt"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:background="#FFFFFF"
                android:ems="10"
                android:hint="Enter File Name or Generate"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/button3"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="#6B0288D1"
                android:text="Generate File"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="160dp"
            android:layout_marginEnd="196dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.15">

            <Button
                android:id="@+id/button4"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#E4536DFE"
                android:text="Editor Mode" />

            <Button
                android:id="@+id/button"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#69F0AE"
                android:text="Speech->Text" />

            <Button
                android:id="@+id/button2"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#40C4FF"
                android:text="Ink->Text" />

            <Button
                android:id="@+id/button5"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="#FFFF00"
                android:text="File Explorer" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="154dp"
            android:layout_height="121dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>